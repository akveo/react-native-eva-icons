{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/tsc-out",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "es2018"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./lib/**/*.ts",
    "./lib/**/*.tsx",
    "./lib/**/*.json",
  ],
  "exclude": [
    "./node_modules",
    "./babel.config.js",
    "./jest.config.ts"
  ]
}

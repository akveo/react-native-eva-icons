{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/tsc-out",
    "composite": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": [
    "./lib/**/*.ts",
    "./lib/**/*.tsx",
    "./lib/**/*.json",
  ],
  "exclude": [
    "./node_modules",
    "./babel.config.js",
    "./jest.config.ts"
  ]
}